    <LinearLayout
        android:id="@+id/linearLayout_timer"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="@+id/coffe_shop_image_view"
        app:layout_constraintStart_toStartOf="@+id/coffe_shop_image_view"
        app:layout_constraintTop_toTopOf="@+id/coffe_shop_image_view">

        <TextView
            android:id="@+id/text_view_timer_minutes"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:fontFamily="@font/vt323_regular"

            android:text="25"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:fontFamily="@font/vt323_regular"

            android:text=" : "
            android:textColor="@color/white"
            android:textSize="40sp"


            />

        <TextView
            android:id="@+id/text_view_timer_seconds"
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:fontFamily="@font/vt323_regular"

            android:text="00"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </LinearLayout>

    <Button
        android:id="@+id/decrement_timer"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:backgroundTint="@color/white"

        app:layout_constraintStart_toStartOf="@+id/coffe_shop_image_view"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_timer" />

    <Button
