        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:backgroundTint="@color/white"

        app:layout_constraintStart_toStartOf="@+id/coffe_shop_image_view"
        app:layout_constraintBottom_toTopOf="@id/linearLayout_timer"/>
